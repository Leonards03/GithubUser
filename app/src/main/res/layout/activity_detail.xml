<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.DetailActivity">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/card_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_tiny"
        app:cardElevation="@dimen/cardview_default_elevation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_normal"
            android:paddingTop="@dimen/spacing_large"
            android:paddingEnd="@dimen/spacing_normal"
            android:paddingBottom="@dimen/spacing_normal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/img_profile"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/user1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_following"
                style="@style/TextView"
                android:layout_marginStart="@dimen/spacing_normal"
                app:layout_constraintStart_toEndOf="@id/tv_followers"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10 Following" />

            <TextView
                android:id="@+id/tv_followers"
                style="@style/TextView"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="10 Followers" />

            <TextView
                android:id="@+id/tv_name"
                style="@style/TextView.Headline"
                android:layout_marginTop="@dimen/spacing_tiny"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_followers"
                tools:text="Edwin Leonard Salim" />

            <TextView
                android:id="@+id/tv_username"
                style="@style/TextView.WithDrawable"
                android:layout_marginTop="@dimen/spacing_tiny"
                app:drawableStartCompat="@drawable/ic_alternate_email_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_name"
                tools:text="Leonards03" />

            <TextView
                android:id="@+id/tv_company"
                style="@style/TextView.WithDrawable"
                android:layout_marginTop="@dimen/spacing_small"
                app:drawableStartCompat="@drawable/ic_work_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_username"
                tools:text="Company" />

            <TextView
                android:id="@+id/tv_location"
                style="@style/TextView.WithDrawable"
                android:layout_marginTop="@dimen/spacing_small"
                app:drawableStartCompat="@drawable/ic_room_16"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_company"
                tools:text="Jakarta, Indonesia" />

            <Button
                android:id="@+id/btn_favorite"
                style="@style/Widget.AppCompat.Button.Colored"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/spacing_wide"
                android:text="@string/favorite"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_location" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_large"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/card_profile">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/spacing_small"
            android:paddingTop="@dimen/spacing_normal"
            android:paddingEnd="@dimen/spacing_small"
            android:paddingBottom="@dimen/spacing_normal">

            <androidx.cardview.widget.CardView
                android:id="@+id/ic_repository"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:cardCornerRadius="@dimen/radius_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="@color/blue_grey"
                    android:contentDescription="@string/repository_icon"
                    android:scaleType="center"
                    android:src="@drawable/icons8_repository_24" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_repository_label"
                style="@style/TextView.Large"
                android:layout_marginStart="@dimen/spacing_small"
                android:text="@string/repositories"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toEndOf="@id/ic_repository"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_repository_count"
                style="@style/TextView.Large"
                android:layout_marginEnd="@dimen/spacing_small"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="14" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>