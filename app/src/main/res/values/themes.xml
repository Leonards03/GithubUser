<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:windowBackground">@color/foreground</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/primaryTextColor</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/secondaryTextColor</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.GithubUser.NoActionBar" parent="Theme.GithubUser">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.NavigationDrawer.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.NavigationDrawer.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>
        <item name="statusBarBackground">@color/blue_grey</item>
    </style>

    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_dark_light</item>
    </style>

    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="TextView.Headline" parent="TextView">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="fontWeight">900</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="TextView.WithDrawable" parent="TextView">
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>

    <style name="ThemeOverlay.GithubUser.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>

</resources>