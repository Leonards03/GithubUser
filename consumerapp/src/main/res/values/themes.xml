<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.GithubUser" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground">@color/foreground</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryVariant">@color/primaryDarkColor</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondaryColor</item>
        <item name="colorSecondaryVariant">@color/secondaryDarkColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/grey_dark_light</item>
    </style>

    <style name="TextView.Subtitle" parent="TextView">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextView.Large" parent="TextView">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/primaryDarkColor</item>
    </style>

    <style name="TextView.Headline" parent="TextView">
        <item name="android:textSize">@dimen/font_larger</item>
        <item name="fontWeight">900</item>
        <item name="android:textColor">#DD000000</item>
    </style>

    <style name="TextView.WithDrawable" parent="TextView">
        <item name="android:drawablePadding">@dimen/spacing_tiny</item>
    </style>
</resources>